<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0DFDF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.profile.ProfileScreen">

    <TextView
        android:id="@+id/first"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your profile"
        android:textSize="35sp"
        android:fontFamily="@font/libre_bold"/>

    <ImageView
        android:id="@+id/logoPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/first"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/second"
        app:layout_constraintTop_toBottomOf="@id/logoPart"
        android:layout_marginTop="50dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:src="@drawable/headphone_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/libre_regular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_ic"
            android:background="@drawable/add_to_cart_bg"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/third"
        app:layout_constraintTop_toBottomOf="@id/second"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:src="@drawable/place_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/libre_regular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_ic"
            android:background="@drawable/add_to_cart_bg"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth"
        app:layout_constraintTop_toBottomOf="@id/third"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center"
            android:src="@drawable/notification_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/libre_regular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_ic"
            android:background="@drawable/add_to_cart_bg"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth"
        app:layout_constraintTop_toBottomOf="@id/fourth"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:src="@drawable/info_ic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/libre_regular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_ic"
            android:background="@drawable/add_to_cart_bg"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixth"
        app:layout_constraintTop_toBottomOf="@id/fifth"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:src="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stylish on social media"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/libre_regular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_ic"
            android:background="@drawable/add_to_cart_bg"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logOutButton"
        app:layout_constraintTop_toBottomOf="@id/sixth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:fontFamily="@font/libre_regular"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:padding="14dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>